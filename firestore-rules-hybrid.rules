rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /******************************************
     * USERS COLLECTION
     ******************************************/
    match /users/{userId} {
      // Users can read all user documents (needed for employee lists)
      allow read: if request.auth != null;
      
      // Users can write their own document
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Allow creation of user documents (needed for employee management)
      allow create: if request.auth != null;
    }

    /******************************************
     * ATTENDANCE COLLECTION
     ******************************************/
    match /attendance/{docId} {
      // Allow authenticated users to read/write attendance
      allow read, write: if request.auth != null;
    }

    /******************************************
     * LEAVE REQUESTS COLLECTION
     ******************************************/
    match /leaveRequests/{docId} {
      // Allow authenticated users to read/write leave requests
      allow read, write: if request.auth != null;
    }

    /******************************************
     * NEWS & EVENTS COLLECTION
     ******************************************/
    match /newsEvents/{docId} {
      // Everyone can read/write news and events
      allow read, write: if request.auth != null;
    }

    /******************************************
     * COMPANY HOLIDAYS COLLECTION
     ******************************************/
    match /companyHolidays/{docId} {
      // Everyone can read/write holidays
      allow read, write: if request.auth != null;
    }

    /******************************************
     * COMPANY POLICIES COLLECTION
     ******************************************/
    match /companyPolicies/{docId} {
      // Everyone can read/write policies
      allow read, write: if request.auth != null;
    }

    /******************************************
     * WORK TIMERS COLLECTION
     ******************************************/
    match /workTimers/{docId} {
      // Everyone can read/write work timers
      allow read, write: if request.auth != null;
    }

    /******************************************
     * DEPARTMENTS COLLECTION
     ******************************************/
    match /departments/{docId} {
      // Everyone can read/write departments
      allow read, write: if request.auth != null;
    }
  }
}
